{% extends 'base.html.twig' %}

{% block title %}BookCategory index{% endblock %}

{% block body %}

<div  class="container">

    <h1>Liste des catégories :</h1>

    <table class="table mb-5">
        <thead>
            <tr>
                <th>Id : </th>
                <th>Catégorie : </th>
                <th>actions : </th>
            </tr>
        </thead>
        <tbody>
        {% for book_category in book_categories %}
            <tr>
                <td>{{ book_category.id }}</td>
                <td>{{ book_category.category }}</td>
                <td>
                    <a href="{{ path('app_book_category_show', {'id': book_category.id}) }}">Voir</a>
                    <a href="{{ path('app_book_category_edit', {'id': book_category.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de catégorie</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn" href="{{ path('app_book_category_new') }}">Créer</a>

</div>
{% endblock %}
