{% extends 'base.html.twig' %}

{% block title %}BookCategory{% endblock %}

{% block body %}
<div  class="container">

    <h1>Catégorie :</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id : </th>
                <td>{{ book_category.id }}</td>
            </tr>
            <tr>
                <th>Catégorie : </th>
                <td>{{ book_category.category }}</td>
            </tr>
        </tbody>
    </table>

<div class="flex justify-between items-center">
        <a class="link" href="{{ path('app_book_category_index') }}">Retour à la liste</a>
    
        <a class="btn" href="{{ path('app_book_category_edit', {'id': book_category.id}) }}">Modifier</a>
</div>

</div>
{% endblock %}
