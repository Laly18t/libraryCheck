{% extends 'base.html.twig' %}

{% block title %}Page livres{% endblock %}

{% block body %}

<div class="container">
    <h1>Page livres</h1>

    {% if app.user == null %}
        <p class="text-xl my-4">Vous n'êtes pas connecté -> <a class="text-red-600" href="{{ path('app_login') }}">Se connecter</a></p>
        
    {% endif %}

    <p class="text-2xl text-red-300 mt-8">Liste de vos livres :</p>

    <div class="flex w-full">
    {% if books == null %}
        <p class="text-lg my-4">Vous n'avez pas de livre pour le moment...</p>
    {% endif %}
            {% for book in books %}
                <div class="border  p-4 w-full">
                    <h2>Titre : {{ book.title }}</h2>
                    <p>{{ book.description }}</p>
                    <p>Auteur : {{ book.author }}</p>
                    <a class="text-red-300 font-bold text-center hover:underline" href="{{ path('book_show', {'id': book.id}) }}">+ d'info</a>
                </div>
            {% endfor %}
    </div>
    <p class="h-5"><a class="bg-indigo-950  text-white p-4 ml-4 mt-4 rounded-lg" href="{{ path('app_books') }}">Ajouter un livre</a></p>
</div>
{% endblock %}
